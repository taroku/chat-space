%div.chat-main__body
  %div.chat-main__body--messages-list
    %div.chat-main__message.clearfix
      %div.chat-main__message-name
        = message.user.name
      %div.chat-main__message-time
        = message.created_at.strftime("%Y/%m/%d %H:%M")
      %div.chat-main__message-body
        - if message.content.present?
          %p.lower-message__content
            = message.content
        = image_tag message.image.url, class: 'chat-main__message-body-image' if message.image.present?
