= render 'shared/side_bar'
%div.chat-main
  %div.chat-main__header
    %div.chat-main__header--group.clearfix
      %div.chat-main__header--group-name{"data-id": @group.id}
        = @group.name
      %a.chat-main__header--group-edit-btn Edit
    %div.chat-main__header-members
      MEMBER:
      %i
      sample

  .messages
    = render @messages

  %div.chat-main__footer(id="chat-main__footer")
    .form
      .chat-main__footer-body
        = form_for [@group, @message], html: {id: 'new_message'} do |f|
          = f.text_field :content, class: 'message textbox', placeholder: 'type a message'
          .form__mask
            = f.label :image, class: ' chat-file' do
              = fa_icon 'picture-o', class: 'chat-main__footer-body image'
              = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'submit'
